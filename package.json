{
  "name": "rx-nostr",
  "version": "0.5.1",
  "author": "penpenpng",
  "description": "Utility to control Nostr in RxJS.",
  "type": "module",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "types": "./types/src/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/penpenpng/rx-nostr.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint src/**/*.ts && prettier src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts && prettier --write src/**/*.ts",
    "test": "jest",
    "docs:dev": "honkit serve",
    "docs:build": "honkit build"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.15.10",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "babel-jest": "^29.5.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "gitbook-plugin-intopic-toc": "^1.1.1",
    "honkit": "^4.0.7",
    "jest": "^29.5.0",
    "jest-websocket-mock": "^2.4.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "typescript": "^4.9.3",
    "vite": "^4.2.0"
  },
  "dependencies": {
    "@noble/hashes": "1.0.0",
    "@noble/secp256k1": "^1.7.1",
    "bech32": "^2.0.0",
    "normalize-url": "^8.0.0",
    "rxjs": "^7.8.0"
  }
}
